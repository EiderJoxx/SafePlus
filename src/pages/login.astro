---
import LayoutSession from "../layouts/LayoutSession.astro";
import "../styles/global.css";
---

<LayoutSession>
  <div class="loginPage flex">
    <div class="container flex">
      <div class="videoDiv">
        <!-- <video src={video} autoPlay muted loop></video> -->

        <div class="textDiv">
          <h1 class="title">LICESAR</h1>
        </div>

        <div class="footerDiv flex">
          <span class="text">No tienes una cuenta?, Unetenos</span>
          <button class="btn">Crear Cuenta</button>
        </div>
      </div>

      <div class="formDiv flex">
        <div class="headerDiv">
          <!-- <img src={logo} alt="Logo img"></img> -->
        </div>

        <form action="" class="form grid">
          <div class="inputDiv">
            <label class="username">Usuario</label>
            <div class="input flex">
              <input
                placeholder="Ingrese su usuario"
                type="text"
                id="username"
                name="user"
              />
            </div>
          </div>

          <div class="inputDiv">
            <label class="password">Contraseña</label>
            <div class="input flex">
              <input
                placeholder="Ingrese su contraseña"
                type="password"
                id="password"
                name="password"
              />
            </div>
          </div>
          {/*<Link to='/LigaAtletismo'>*/}
          <button type="submit" class="btn flex">
            <span>Login</span>
          </button>
          {/*</Link>*/}

          <span class="footerDiv flex">
            Olvidaste tu contraseña? <a href="">Click Here</a>
          </span>
        </form>
      </div>
    </div>
  </div>
</LayoutSession>
