---
interface Props {
  title: string;
  description: string;
  image: string;
  tags: string[];
  alt?: string;
}

const { title, description, image, tags, alt } = Astro.props;
---

<div
  class="max-w-xs bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300"
>
  <img
    class="w-full h-48 object-cover"
    src={image}
    alt={alt || "Imagen de la card"}
  />
  <div class="p-4">
    <h2 class="text-lg font-bold text-gray-800 truncate">{title}</h2>
    <p class="text-gray-600 text-sm mt-2 line-clamp-2">{description}</p>
  </div>
  <div class="p-4 flex flex-wrap gap-2">
    {
      tags.map((tag) => (
        <span class="bg-gray-200 text-gray-700 text-xs font-semibold px-2 py-1 rounded">
          #{tag}
        </span>
      ))
    }
  </div>
</div>
